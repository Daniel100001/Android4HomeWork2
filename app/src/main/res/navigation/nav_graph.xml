<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/singInFragment">


    <fragment
        android:id="@+id/animeDetailFragment"
        android:name="com.example.android4homework2.ui.fragments.anime.detail.DetailAnimeFragment"
        android:label="fragment_anime_detail"
        tools:layout="@layout/fragment_anime_detail">
        <argument android:name="id"
            app:argType="integer" />
    </fragment>

    <fragment

        android:id="@+id/mangaDetailFragment"
        android:name="com.example.android4homework2.ui.fragments.manga.detail.MangaDetailFragment"
        android:label="MangaDetailFragment">

        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>


    <fragment
        android:id="@+id/fragment"
        android:name="com.example.android4homework2.ui.fragments.home.HomeFragment"
        android:label="fragment_"
        tools:layout="@layout/fragment_" >

        <action
            android:id="@+id/action_fragment_to_mangaDetailFragment"
            app:destination="@id/mangaDetailFragment" />
        <action
            android:id="@+id/action_fragment_to_animeDetailFragment"
            app:destination="@id/animeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/singInFragment"
        android:name="com.example.android4homework2.ui.fragments.register.SingInFragment"
        android:label="fragment_sing_in"
        tools:layout="@layout/fragment_sing_in" />

</navigation>